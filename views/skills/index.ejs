<!-- views/skills/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Developer Skills</title>
</head>
<body>
  <h1>Developer Skills</h1>
  <ul>
    <% skills.forEach(skill => { %>
      <li>
        <a href="/skills/<%= skill.id %>">
          <%= skill.name %> - <%= skill.description %> (Level: <%= skill.level %>)
        </a>
      </li>
    <% }); %>
  </ul>
</body>
</html>
